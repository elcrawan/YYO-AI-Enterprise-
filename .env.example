# YYO Agent AI - Environment Variables Template
# Copy this file to .env and update the values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME=YYO Agent AI
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://yyo_user:yyo_password@localhost:5432/yyo_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yyo_ai
DB_USER=yyo_user
DB_PASSWORD=yyo_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# MongoDB (Analytics & Documents)
MONGODB_URL=mongodb://localhost:27017/yyo_ai
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=yyo_ai
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch (Search & Logs)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# CORS Settings
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# AI SERVICES CONFIGURATION
# ==============================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Anthropic Claude
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# xAI Grok
GROK_API_KEY=your-grok-api-key
GROK_MODEL=grok-beta

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat

# Mistral
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-large-latest

# Kimi
KIMI_API_KEY=your-kimi-api-key

# Qwen
QWEN_API_KEY=your-qwen-api-key

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM_NAME=YYO Agent AI
EMAIL_FROM_ADDRESS=noreply@yyo-ai.com

# ==============================================
# SMS CONFIGURATION
# ==============================================

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FILE STORAGE
# ==============================================

# Local Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=yyo-ai-files

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Winston Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ==============================================
# RATE LIMITING
# ==============================================

# API Rate Limits (requests per hour)
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================

# Socket.IO
SOCKET_IO_CORS_ORIGIN=http://localhost:3001
SOCKET_IO_TRANSPORTS=websocket,polling

# ==============================================
# CRON JOBS & BACKGROUND TASKS
# ==============================================

# Task Scheduling
ENABLE_CRON_JOBS=true
CLEANUP_INTERVAL=0 2 * * *
BACKUP_INTERVAL=0 3 * * *
REPORT_GENERATION_INTERVAL=0 6 * * *

# Bull Queue (Redis-based job queue)
BULL_REDIS_URL=redis://localhost:6379
BULL_CONCURRENCY=5

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Debug Mode
DEBUG=yyo:*
DEBUG_SQL=false

# Hot Reload
NODEMON_WATCH=src
NODEMON_EXT=ts,js,json

# Testing
TEST_DATABASE_URL=postgresql://yyo_user:yyo_password@localhost:5432/yyo_ai_test
TEST_MONGODB_URL=mongodb://localhost:27017/yyo_ai_test

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Clustering
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Vite Frontend
VITE_API_URL=http://localhost:3000/api/v1
VITE_WS_URL=http://localhost:3000
VITE_APP_NAME=YYO Agent AI
VITE_APP_VERSION=1.0.0

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# Docker Compose Override
COMPOSE_PROJECT_NAME=yyo-ai
COMPOSE_FILE=docker-compose.yml

# Container Settings
BACKEND_PORT=3000
FRONTEND_PORT=3001
POSTGRES_PORT=5432
MONGODB_PORT=27017
REDIS_PORT=6379
ELASTICSEARCH_PORT=9200

# ==============================================
# BACKUP & RECOVERY
# ==============================================

# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=yyo-ai-backups

# ==============================================
# ANALYTICS & TRACKING
# ==============================================

# Google Analytics
GA_TRACKING_ID=

# Custom Analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000

# ==============================================
# FEATURE FLAGS
# ==============================================

# Experimental Features
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_MOBILE_APP=false

# ==============================================
# LOCALIZATION
# ==============================================

# Supported Languages
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# Timezone
DEFAULT_TIMEZONE=Asia/Riyadh

# ==============================================
# SECURITY HEADERS
# ==============================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# HSTS
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Microsoft Teams
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=

# Zapier
ZAPIER_WEBHOOK_URL=

# ==============================================
# CUSTOM CONFIGURATIONS
# ==============================================

# Add your custom environment variables here
